@model IEnumerable<Proyecto.Models.Cancha>

@{
    ViewBag.Title = "Index";
}

<h2>CANCHAS</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", new { }, new { @class = "btn btn-info" })
</p>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong></strong>@TempData["AlertMessage"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Escenario.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disciplina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadEspec)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medidas)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Escenario.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disciplina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadEspec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medidas)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CanchaId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalles", "Details", new { id = item.CanchaId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.CanchaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
